RewriteEngine On

# Reglas para URLs amigables
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(admin|records|login|edit_user)$ index.php?route=$1 [L]

# Bloquear acceso a archivos espec√≠ficos
<FilesMatch "config.php|robots.txt">
    Require all denied
</FilesMatch>